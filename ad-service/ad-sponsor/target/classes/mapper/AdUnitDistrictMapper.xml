<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cx.ad.dao.unit_condition.AdUnitDistrictMapper">

    <resultMap type="com.cx.ad.entity.unit_condition.AdUnitDistrict" id="AdUnitDistrictMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="unitId" column="unit_id" jdbcType="BIGINT"/>
        <result property="province" column="province" jdbcType="VARCHAR"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdUnitDistrictMap">
        select
          id, unit_id, province, city
        from ad-data.ad_unit_district
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AdUnitDistrictMap">
        select
          id, unit_id, province, city
        from ad-data.ad_unit_district
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AdUnitDistrictMap">
        select
          id, unit_id, province, city
        from ad-data.ad_unit_district
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="unitId != null">
                and unit_id = #{unitId}
            </if>
            <if test="province != null and province != ''">
                and province = #{province}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into ad-data.ad_unit_district(unit_id, province, city)
        values (#{unitId}, #{province}, #{city})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ad-data.ad_unit_district
        <set>
            <if test="unitId != null">
                unit_id = #{unitId},
            </if>
            <if test="province != null and province != ''">
                province = #{province},
            </if>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ad-data.ad_unit_district where id = #{id}
    </delete>

</mapper>